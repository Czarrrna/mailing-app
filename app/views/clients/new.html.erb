<h1>Podaj dane:</h1>
<%= form_for @client do |form| %>
<p><%= form.label("name") %></p>
  <p><%= form.text_field :name %></p>
  <% if @client.errors.any? %>
  <ul>
  	<% @client.errors.full_messages.each do |msg| %>
  	<li><%= msg %></li>
  	<% end %>
  </ul>
  <% end %>
  <p><%= form.label("surname") %></p>
  <p><%= form.text_field :surname %></p>
  <p><%= form.label("email") %></p>
  <p><%= form.text_field :email %></p>
  <p><%= form.submit %></p>
<% end %>
