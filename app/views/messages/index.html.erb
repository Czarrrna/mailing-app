<% @messages.each do |message| %> 
<p><%= message.title %></p>
<p><%= message.topic %></p>
<p><%= message.content.html_safe %></p>
<%= link_to "Edytuj", edit_message_path(message.id), class: "btn btn-success" %></button>
<%= link_to "Usuń", message_path(message.id), method: :delete, data: {confirm: "Czy jesteś pewien?"}, class: "btn btn-danger" %></button>





<% end %>
<p></p>
<p><%= link_to "Dodaj wiadomość", new_message_path, class: "btn btn-primary" %></p>
